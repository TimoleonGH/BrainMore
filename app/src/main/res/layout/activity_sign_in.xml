<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leon.lamti.cc.signInNOTUSED.SignInActivity"
    android:background="@color/colorPrimary">

    <EditText
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="15"
        android:id="@+id/emailET"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:hint="email"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:background="@drawable/sign_in_input"
        android:textColorHint="@color/black"
        android:padding="14dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"/>

    <EditText
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|textPassword"
        android:ems="15"
        android:id="@+id/passwordET"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/emailET"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:hint="password"
        android:background="@drawable/sign_in_input"
        android:textColorHint="@color/black"
        android:padding="14dp"
        android:singleLine="true"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:text="Login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/loginB"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        style="@style/Widget.AppCompat.Button.Colored" />
        android:layout_marginRight="-5dp"/>
        android:layout_marginLeft="-5dp"/>

    <TextView
        android:text="create account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createAccountTV"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/emailET"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone" />

    <Button
        android:text="Popup Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popupMenuB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="popupPopupMenu"
        android:visibility="gone" />

    <Button
        android:text="Popup Window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popupWindowB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone" />

    <Button
        android:text="mat dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/matDialogB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/loginB"
        app:layout_constraintLeft_toLeftOf="@+id/loginB"
        android:visibility="gone" />

    <Button
        android:text="Sign in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signInB"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:onClick="goToSetupAccount"
        app:layout_constraintBottom_toTopOf="@+id/loginB"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
