<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sentencesCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"

    app:cardCornerRadius="@dimen/activity_vertical_margin"
    app:cardElevation="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="11"
        android:gravity="center">


    <RelativeLayout
        android:layout_weight="9"
        android:layout_width="0dp"
        android:layout_height="80dp">

        <TextView
            android:text="txt1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/senTV1"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_marginLeft="16dp"/>

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="20"
            android:id="@+id/senET"
            android:singleLine="true"
            android:textSize="24sp"
            android:selectAllOnFocus="true"
            android:textColor="@color/black"
            android:gravity="center"
            android:hint=""
            android:textColorHint="@color/black"
            android:layout_alignBaseline="@+id/senTV1"
            android:layout_alignBottom="@+id/senTV1"
            android:layout_toRightOf="@+id/senTV1"
            android:layout_toEndOf="@+id/senTV1"
            android:focusable="true"/>

        <TextView

            android:text="txt3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/senTV2"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/senET"
            android:layout_toEndOf="@+id/senET"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@mipmap/ic_done_white_24dp"
            android:id="@+id/okFAB"
            android:layout_gravity="center"
            android:visibility="visible"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:cropToPadding="false" />

    </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/vIV"
            android:src="@drawable/v"
            android:layout_marginRight="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/xIV"
            android:src="@drawable/x"
            android:layout_marginRight="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>

        <TextView
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anwserTV"
            android:visibility="gone"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="anwserrrrr"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/senTV1"
            android:layout_toEndOf="@+id/senTV1"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

</android.support.v7.widget.CardView>